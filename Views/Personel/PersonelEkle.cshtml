@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel

@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yeni Personel Sayfası</h2>
<br />
<form class="form-group" method="post">
    @Html.Label("Personel Adı:")
    @Html.TextBoxFor(x => x.PersonelAdi, new { @class = "form-control" })
    <br />
    @Html.Label("Personel Soyadı:")
    @Html.TextBoxFor(x => x.PersonelSoyadi, new { @class = "form-control" })
    <br />
    @Html.Label("Görsel:")
    @Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control" })
    <br />
    @Html.Label("Departman:")
    @Html.DropDownListFor(x => x.DepartmanId, (List<SelectListItem>)ViewBag.Deger1, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kaydet</button>
</form>

