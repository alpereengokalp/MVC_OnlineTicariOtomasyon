@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Urun>

@{
    ViewBag.Title = "RastgeleUrun";
    Layout = "~/Views/Shared/_MusteriLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | E-commerce</title>
    <!-- Responsive design -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <style>
        .product-image {
            width: 100%; /* Ensure that images fill the card */
            height: 200px; /* Fixed height for all images */
            object-fit: cover; /* Ensures the image covers the area without distorting aspect ratio */
        }

        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* Distributes space evenly inside the card */
        }

        .card {
            height: 100%; /* Ensures all cards are the same height */
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Navbar links and other elements -->
        </nav>
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <h3 class="my-3">Önerilen Ürünler</h3>
                <div class="row">
                    @foreach (var x in Model)
                    {
                        <div class="col-md-4">
                            <!-- Product Image -->
                            <div class="card card-outline card-primary">
                                <div class="card-body box-profile">
                                    <div class="text-center">
                                        <img class="profile-user-img img-fluid img-circle"
                                             src="@x.UrunGorsel"
                                             alt="User profile picture">
                                    </div>
                                    <h3 class="profile-username text-center">@x.UrunAdi</h3>
                                    <p class="text-muted text-center">@x.Marka</p>
                                    <ul class="list-group list-group-unbordered mb-3">
                                        <li class="list-group-item">
                                            <b>Fiyat</b> <a class="float-right">₺@x.SatisFiyati</a>
                                        </li>
                                    </ul>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                    }
                </div>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.wrapper -->
    <!-- jQuery -->
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
</body>
</html>

