@using MvcOnlineTicariOtomasyon.Models.Siniflar;
@model List<Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    
    @foreach(var u in Model) 
    { 
        <tr>
            <td>@u.UrunID</td>
            <td>@u.UrunAdi</td>
            <td>@u.Marka</td>
            <td>@u.Stok</td>
            <td>@u.AlisFiyati</td>
            <td>@u.SatisFiyati</td>
            <td>@(u.Kategori != null ? u.Kategori.KategoriAdi : "Kategori Yok")</td> @*Burası hatalı*@
            <td>@u.UrunGorsel</td>
            <td>
                <a href="/Urun/UrunSil/@u.UrunID" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Urun/UrunGetir/@u.UrunID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/Urun/YeniUrun/" class="btn btn btn-primary">Yeni Ürün</a>

