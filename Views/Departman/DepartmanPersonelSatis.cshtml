@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>

@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Departman Personel Satış</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel Adı: @ViewBag.dPersonel</li>
</ol>
<table class="table table-condensed">
    <tr>
        @*<th>SATIŞ ID</th>*@
        <th>ÜRÜN</th>
        <th>MÜŞTERİ</th>
        <th>FİYAT</th>
        <th>ADET</th>
        <th>TOPLAM</th>
        <th>TARİH</th>
        <th>YAZDIR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            @*<td>@x.SatisID</td>*@
            <td>@x.Urun.UrunAdi</td>
            <td>@x.Cariler.CariAdi @x.Cariler.CariSoyadi</td>
            <td>@x.Fiyat ₺</td>
            <td>@x.Adet</td>
            <td>@x.ToplamTutar</td>
            <td>@x.Tarih</td>
            <td><a href="#" class="btn btn-default" style="background-color:lightblue">Yazdır</a></td>
        </tr>
    }

</table>