@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>

@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.dDetay</li>
</ol>

<table class="table table-hover">
    <tr>
        @*<th>PERSONEL ID</th>*@
        <th>PERSONEL</th>
        @*<th>GÖRSEL</th>*@
        <th>SATIŞLAR</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            @*<td>@x.PersonelID</td>*@
            <td>@x.PersonelAdi @x.PersonelSoyadi</td>
            @*<td>@x.PersonelGorsel</td>*@
            <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelID" class="btn btn-default" style="background-color:limegreen">Satışlar</a></td>
        </tr>
    }


</table>
