@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>ÜRÜN</th>
            <th>MÜŞTERİ</th>
            <th>PERSONEL</th>
            <th>ADET</th>
            <th>FİYAT</th>
            <th>TOPLAM</th>
            <th>TARİH</th>
            <th>GÜNCELLE</th>
            <th>DETAYLAR</th>
        </tr>
    </thead>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.SatisID</td>
            <td>@s.Urun.UrunAdi</td>
            <td>@s.Cariler.CariAdi @s.Cariler.CariSoyadi</td>
            <td>@s.Personel.PersonelAdi @s.Personel.PersonelSoyadi</td>
            <td>@s.Adet</td>
            <td>@s.Fiyat</td>
            <td>@s.ToplamTutar</td>
            <td>@s.Tarih</td>
            <td><a href="/Satis/SatisGetir/@s.SatisID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Satis/SatisDetaylar/@s.SatisID" class="btn btn-success" style="background-color:royalblue">Detaylar</a></td>
        </tr>
    }
</table>

<a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış Yap</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
